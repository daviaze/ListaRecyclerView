<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_main"
    android:background="@drawable/card_view_bg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp">
    
    <TextView
        android:id="@+id/text_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textSize="24sp"
        android:text="F"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="@drawable/circle"></TextView>

    <TextView
        android:id="@+id/text_user"
        android:layout_toStartOf="@+id/text_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Facebook"
        android:textColor="@color/darkGray"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/text_icon"
        android:layout_alignTop="@id/text_icon"
        ></TextView>

    <TextView
        android:id="@+id/text_subject"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/text_user"
        android:layout_alignStart="@id/text_user"
        android:text="Descrição"
        android:textColor="@color/darkGray"/>

    <TextView
        android:id="@+id/text_preview"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/text_subject"
        android:layout_alignStart="@id/text_user"
        android:text="Preview"
        android:layout_marginEnd="24dp"
        android:textColor="@color/darkGray"

        ></TextView>

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGray"
        android:ellipsize="marquee"
        android:singleLine="true"
        tools:text="25 Sept"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        ></TextView>

    <ImageView
        android:id="@+id/star"
        android:src="@drawable/ic_baseline_star_24"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        tools:ignore="ContentDescription"/>

</RelativeLayout>


</android.support.v7.widget.CardView>